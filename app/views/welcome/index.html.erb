        .to( $('#teams'), .1, {css:{display:'none'}})
        .to( $('#sixtyfour'), 0.1, {css:{display:'block'}})
        .to( $('#games'), 0.1, {css:{display:'block'}})
        .to( $('#sixtyfour'), 0.6, {css:{opacity:1}})
        .to( $('#sixtyfour'), 1, {scaleX:3, scaleY:3})
        .to( $('#games'), 0.1, {scaleX:2, scaleY:2})
