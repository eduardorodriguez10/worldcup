	<%= form_for @membership do |f| %>	
		<div class='control-group form-row'>
			<label for="group_id" class= 'form-label col-lg-2 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-4 col-xs-12'>Enter the Group Id</label>
			<input type="text" name="group_id" id="group_id" class='form-input col-lg-3 col-md-4 col-sm-5 col-xs-10'>
		</div>
		<div class='control-group form-row'>
			<label for="passcode" class= 'form-label col-lg-2 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-4 col-xs-12'>Enter the Group Passcode</label>
			<input type="text" name="passcode" id="passcode" class='form-input col-lg-3 col-md-4 col-sm-5 col-xs-10'>
		</div>
		<div class='control-group form-row'>
			<%= f.label :user_screen_name, class: 'form-label col-lg-2 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-4 col-xs-12' %> 
			<%= f.text_field :user_screen_name, class: 'form-input col-lg-3 col-md-4 col-sm-5 col-xs-10' %>
		</div>
		<div class='control-group form-row'>
		<%= f.submit "Join Group", class: 'btn btn-success form-btn col-md-offset-4' %>
		</div>
	<% end %>