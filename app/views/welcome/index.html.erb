 <script>
      $(document).ready(function(){
      	$('body').css({"min-width": "0px"});
        (new TimelineLite())
        .to( $('#thirtytwo'), 0.1, {css:{display:'block'}})
        .to( $('#teams'), 0.1, {css:{display:'block'}})
