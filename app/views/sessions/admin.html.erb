<%= render 'shared/content_title', title: "Please Log In" %>

<div id='login-container' class='well'>
	<%= form_tag '/wcblogin' do %>
		<div class='control-group form-row'>
			<%= label_tag :email, nil, class: 'form-label col-lg-2 col-lg-offset-7 col-md-3 col-md-offset-5 col-sm-offset-4 col-sm-4 col-xs-12' %>
			<%= text_field_tag :email, params[:email] || '', class: 'form-input col-lg-3 col-md-4 col-sm-4 col-xs-10' %>
		</div>
		<div class='control-group form-row'>
			<%= label_tag :password, nil, class: 'form-label col-lg-2 col-lg-offset-1 col-md-3 col-md-offset-1 col-sm-4 col-xs-12' %>
			<%= password_field_tag :password, params[:password] || '', class: 'form-input col-lg-3 col-md-4 col-sm-5 col-xs-10' %>
		</div>
		<div class='control-group form-row'>
			<%= submit_tag "Login", class: 'btn btn-success form-btn col-xs-2 col-xs-offset-6 col-md-offset-4 col-md-2 col-sm-2 col-sm-offset-3' %>
		</div>
	<% end %>
</div>